    "def infinity():    \n",
    "    try:\n",
    "        val = 5/0\n",
    "        print(val)\n",
    "    except:\n",
    "        print(\"-\"*60)\n",
    "        print(\"Exception thrown\")\n",
    "        print(\"Number is not divisible by 0\")\n",
    "        print(\"-\"*60)\n",
    "    finally:\n",
    "        print(\"Completed the calculation\")"
