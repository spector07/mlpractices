    "### Write a function so that the columns of the output matrix are powers of the input vector. AlexandreTheophile Vandermonde\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "array([[ 1,  2,  4],\n",
       "       [ 1,  4, 16]], dtype=int32)"
      ]
     },
     "execution_count": 2,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "def powerOfVectors(lst,cols,increasing):\n",
    "    x = np.array(lst)\n",
    "    arr = np.column_stack([x**(cols-1-i) for i in range(cols)])\n",
    "    if increasing:\n",
    "        return np.array([item[::-1] for item in arr])    \n",
    "    return arr\n",
    "\n",
    "powerOfVectors([2,4], 3, True)"
   ]
  },
